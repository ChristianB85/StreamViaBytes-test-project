<Window x:Class="PatientenAkten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatientenAkten"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="textBoxContent" AcceptsReturn="true" Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="2" TextWrapping="Wrap" Text=""/>
        <Button x:Name="btnCreate" Content="Erstellen" Grid.Row="3" Grid.Column="3" Width="150" Height="50" Click="btnCreate_Click"/>
        <Button x:Name="btnOpen" Content="Lesen" Grid.Row="2" Grid.Column="3" Width="150" Height="50" Click="btnOpen_Click"/>
        <TextBox x:Name="textBoxFileName" TextWrapping="Wrap" Text="" Grid.Column="3" Grid.Row="1" Height="50" Margin="20,0,20,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
